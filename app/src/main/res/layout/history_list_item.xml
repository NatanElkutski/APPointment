<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layoutDirection="rtl"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:background="#F44336">

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_baseline_delete_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/delete_icon"
                android:layoutDirection="rtl"
                android:text="מחק"
                android:textColor="#fff"

                android:textSize="13dp" />

            <!-- android:layout_toStartOf="@id/delete_icon" -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorWhite"
            android:clickable="true">

            <TextView
                android:id="@+id/barbenName_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingStart="16dp"
                android:text="barbenName"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/salonName_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/barbenName_id"
                android:layout_marginTop="2dp"
                android:paddingStart="16dp"
                android:text="salonName"
                android:textColor="#b3000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/salonAddress_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/barbenName_id"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/salonName_id"
                android:text="salonAddress"
                android:textColor="#b3000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/appointmentTime_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/salonName_id"
                android:layout_marginTop="2dp"
                android:paddingStart="16dp"
                android:text="appointmentTime"
                android:textColor="#b3000000"
                android:textDirection="ltr"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />
</LinearLayout>