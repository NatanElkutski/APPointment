<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/booking_step4_confirm_id_ll"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">


    <TextView
        android:text="אנא אשר את פרטי ההזמנה!"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirm_order_ll"
        android:layout_marginBottom="24dp"
        />

    <LinearLayout
        android:id="@+id/confirm_order_ll"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="פרטי התור שנקבע:"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_event_note_24"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_booking_time_text"
                android:text="10h00 at 13/08/2020"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textDirection="ltr"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_event_note_24"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_booking_barber_text"
                android:text="David"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


        </LinearLayout>

        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/transparent_black_10p" />

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salon #1"
            android:textColor="@color/colorWhite"
            android:id="@+id/txt_salon_name"
            android:textSize="22sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_web_24"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_salon_website"
                android:text="https://someline.....?"
                android:textSize="18sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_local_phone_24"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_salon_phone"
                android:text="+972 050-000-0011"
                android:textSize="18sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_access_time_24"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_salon_open_hours"
                android:text="9h00 - 19h00"
                android:textSize="18sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_salon_address"
                android:text="Address of Salon #1"
                android:textSize="18sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>