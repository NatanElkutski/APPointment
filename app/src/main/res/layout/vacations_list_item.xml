<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layoutDirection="ltr"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/rl_vacations"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:gravity="center">

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/dates_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="16/09/2020 - 20/09/2020"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button
            android:id="@+id/vacations_list_item_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dates_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_blue_rounded_selector"
            android:gravity="center"
            android:text="בטל חופשה"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/transparent_gray_70p"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>