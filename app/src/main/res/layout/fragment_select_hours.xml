                android:textSize="16dp" />

            <TextView
                android:id="@+id/day41"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="wen1"
                android:text="שעת פתיחה"
                android:textColor="@color/AppMainColor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/day42"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
