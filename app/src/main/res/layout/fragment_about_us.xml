<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:layoutDirection="rtl"
    android:padding="8dp"
    tools:context=".Service.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#8222"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="אודות:"
            android:textColor="@color/AppMainColor"
            android:textSize="30dp"
            android:textStyle="bold" />

        <View
            android:layout_width="85dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:background="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:shadowColor="#8222"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="מי אנחנו:"
            android:textColor="@color/AppMainColor"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:shadowColor="@color/AppMainColor"
            android:text="נתנאל אלקוטסקי ובן חממי - פיתוח, עיצוב ותכנון."
            android:textColor="@color/AppMainColor"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:shadowColor="#8222"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="המטרה שלנו:"
            android:textColor="@color/AppMainColor"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:shadowColor="@color/AppMainColor"
            android:text="לספק חווית לקוח מקסימלית לקביעת תורים אונליין באופן נגיש, דינאמי ומהיר ליומן העבודה של בית העסק! הייחודיות של האפליקציה היא הדינאמיות בין בית העסק לעובד שיכול לעבוד שעות שונות אך במסגרת שעות העבודה של בית העסק."
            android:textColor="@color/AppMainColor"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:shadowColor="#8222"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="ניתן לפנות אלינו לכל סיבה גם באימייל!"
            android:textColor="@color/AppMainColor"
            android:textSize="14dp"
            android:textStyle="italic" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/contact_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_blue_rounded_selector"
            android:backgroundTint="@color/BtnMainColor"
            android:text="צור קשר"
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>